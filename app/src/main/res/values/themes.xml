<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capstone" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D3C1F1</item>
        <item name="colorPrimaryVariant">#D3C1F1</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FADA61</item>
        <item name="colorSecondaryVariant">#FADA61</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="Theme.Capstone.NoActionBar" parent="Theme.Capstone">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Capstone.Reverse">
        <item name="colorPrimary">#FADA61</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">#D3C1F1</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
</resources>